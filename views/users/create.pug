extends ../layouts/common.pug

block content
    h1 Create user
    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create" method="POST")
        .form-group
            label(for='nameInputText') Name
            input#nameInputText.form-control(name="name" value=values ? values.name : '' type="text" placeholder='Enter name')
        .form-group
            label(for='phoneInputText') Phone
            input#phoneInputText.form-control(name="phone" value=values ? values.phone : '' type="password", placeholder='Enter phone')
        button.btn.btn-primary(type='submit') Submit