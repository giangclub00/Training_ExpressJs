extends ../layouts/common.pug

block content
    h1 Login
    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/auth/login" method="POST")
        .form-group
            label(for='emailInputText') Email
            input#emailInputText.form-control(name="email" type="text" placeholder='Enter email')
        .form-group
            label(for='passwordInputText') Password
            input#passwordInputText.form-control(name="password" type="password", placeholder='Enter password')
        button.btn.btn-primary(type='submit') Submit